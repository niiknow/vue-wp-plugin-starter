{
  "name": "PluginFileName",
  "version": "1.0.0",
  "description": "A WordPress Vue.js starter plugin",
  "author": "Tom Noogen",
  "license": "GPLv2",
  "textdomain": "PluginPrefix",
  "scripts": {
    "dev": "npm run development",
    "development": "mix",
    "watch": "mix watch",
    "watch-poll": "mix watch -- --watch-options-poll=1000",
    "prod": "npm run production",
    "production": "mix --production",
    "lint": "tslint --project ./tsconfig.json --config ./tslint.json && eslint bin/*.js src/**/*.vue && stylelint 'assets/*.css'",
    "lint-fix": "tslint --project ./tsconfig.json  --config ./tslint.json --fix && eslint --fix bin/*.js src/**/*.vue && stylelint --fix 'assets/*.css'",
    "test": "jest",
    "make-archive": "node ./bin/makearchive.js",
    "make-plugin": "node ./bin/makeplugin.js",
    "make-pot": "node ./bin/makepot.js && vue-gettext-extract",
    "compile-vue-translation": "vue-gettext-compile"
  },
  "engines" : {
    "node": ">=17"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "ie >= 11"
  ],
  "eslintIgnore": [
    "**/node_modules/*",
    "public/*",
    "vendor/*"
  ],
  "devDependencies": {
    "@babel/eslint-parser": "^7.18.2",
    "@popperjs/core": "^2.11.5",
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/typography": "^0.5.2",
    "@types/jest": "^27.5.1",
    "@types/lodash": "^4.14.182",
    "@variantjs/core": "^0.0.90",
    "@variantjs/vue": "^0.0.22",
    "@vue/cli-plugin-unit-jest": "^5.0.4",
    "@vue/compiler-sfc": "^3.2.37",
    "@vue/test-utils": "^2.0.1",
    "@vue/vue3-jest": "^27.0.0",
    "archiver": "^5.3.1",
    "autoprefixer": "^10.4.7",
    "axios": "^0.27.2",
    "body-scroll-lock": "^4.0.0-beta.0",
    "browser-sync": "^2.27.10",
    "browser-sync-webpack-plugin": "^2.3.0",
    "core-js": "^3.23.1",
    "css-loader": "^6.7.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-vue": "^9.1.1",
    "jest": "27.5.1",
    "jsdom": "^19.0.0",
    "laravel-mix": "^6.0.49",
    "laravel-mix-tailwind": "^0.1.2",
    "lodash": "^4.17.21",
    "node-wp-i18n": "^1.2.6",
    "postcss": "^8.4.14",
    "postcss-import": "^14.1.0",
    "postcss-loader": "^7.0.0",
    "postcss-preset-env": "^7.7.1",
    "postcss-pxtorem": "^6.0.0",
    "purecss-sass": "^2.1.0",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.52.3",
    "sass-loader": "^13.0.0",
    "stylelint": "^14.9.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-webpack-plugin": "^3.3.0",
    "sweetalert2": "^11.4.17",
    "tailwindcss": "^3.1.3",
    "ts-jest": "27.1.4",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "^4.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.7.3",
    "vue": "^3.2.37",
    "vue-axios": "^3.4.1",
    "vue-color-input": "^1.0.6",
    "vue-loader": "^17.0.0",
    "vue-router": "^4.0.16",
    "vue3-ace-editor": "^2.2.2",
    "vue3-gettext": "^2.3.0",
    "vue3-scroll-spy": "^1.0.8",
    "webpack": "^5.73.0"
  }
}
